{
    "mcpServers": {
        
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "."
            ]
        },
        
        "research": {
            "command": "uv",
            "args": ["run", "research_server.py"],
            "url": "http://localhost:3001/sse",
            "transport": "sse",
            "capabilities": {
                "tools": true,
                "resources": true,
                "prompts": true
            }
        },
        
        "fetch": {
            "command": "uvx",
            "args": ["mcp-server-fetch"]
        }
    }
}